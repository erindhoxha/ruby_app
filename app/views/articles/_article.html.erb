<div id="<%= dom_id article %>" class="card p-3 shadow-sm">
  <div class="card-body p-0">
    <div class="d-flex flex-row justify-content-between">
      <h5 class="card-title d-inline">
        <%= article.title %>
      </h5>
      <h6 class="d-inline text-end">
        <%= article.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
      </h6>
    </div>
    <h6>
      <%= article.description %>
    </h6>
  </div>
  <div class="d-flex align-items-center gap-2 w-100 mt-3">
    <%= link_to "Shiko deshiren", article_path(article), class: "btn btn-info d-inline" %>
    <%= link_to "Ndrysho", edit_article_path(article), class: "btn btn-warning" %>
    <div class="ml-auto">
      <%= button_to "Fshije", article_path(article), method: :delete, class: "btn btn-danger ml-auto", data: { confirm: "Are you sure?" }%>
    </div>
  </div>
</div>