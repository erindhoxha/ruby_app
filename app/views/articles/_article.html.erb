<div id="<%= dom_id article %>" class="card p-3 bg-dark">
  <div class="card-body p-0">
    <div class="d-flex flex-row justify-content-between">
      <%# if article.user.present? %>
      <%#   <div> %>
      <%#     E krijuar nga <span class="font-weight-bold"><%= article.user.username %>
      <%# </span> %>
      <%#   </div> %>
      <%# end %>
      <% if article.title.present? %>
        <div>
          <h6 class="text-sm text-muted">Titulli</h6>
          <h5 class="card-title d-inline">
            <%= article.title %>
          </h5>
        </div>
      <% end %>
      <h6 class="d-inline text-end">
        <%= article.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
      </h6>
    </div>
    <div class="mt-3">
      <h6 class="text-muted">Deshira</h6>
        <h5>
      <%= article.description %>
    </h5>
    </div>
  </div>
  <div class="d-flex align-items-center gap-2 w-100 mt-1 gap-2">
    <%= link_to "Me shume", article_path(article), class: "d-inline" %>
    <%= link_to "Ndrysho", edit_article_path(article), class: "btn btn-warning ml-auto" %>
    <div>
      <%= button_to "Fshije", article_path(article), method: :delete, class: "btn btn-danger ml-auto", data: { confirm: "Are you sure?" }%>
    </div>
  </div>
</div>