

<% if notice %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<h1>Wish: #<%= @article.id %></h1>
<hr>
  <h6 class="mt-3">Detajet</h6>
  <h5>
    <%= @article.description %>
  </h5>
  <h6 class="mt-3">Koha e krijimit</h6>
  <h5>
    <%= @article.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
  </h5>
</div>
<hr>
<div>
  <% if current_user.id == @article.user_id %>
    <%= link_to "Create another wish", new_article_path, class: "btn btn-light" %>
  <% end %>
  <%= link_to "Kthehu", articles_path, class: "btn btn-dark" %>
</div>


