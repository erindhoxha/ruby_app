<% if notice %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<h1>Wishlist</h1>
<%= link_to "Create a wish", new_article_path, class: "btn--link mt-3 rounded" %>
<div id="articles" class="d-flex flex-column gap-3 mt-4">
  <% @articles.each do |article| %>
    <%= render article %>
  <% end %>
</div>

<%= will_paginate @articles, class: "apple_pagination" %>

