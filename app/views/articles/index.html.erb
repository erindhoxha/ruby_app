<% if notice %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<h1>Lista e deshirave tua</h1>
<%= link_to "Krijo nje deshire", new_article_path, class: "btn--link mt-3 rounded" %>
<div id="articles" class="d-flex flex-column gap-3 mt-4">
  <% @articles.each do |article| %>
    <%= render article %>
  <% end %>
</div>

