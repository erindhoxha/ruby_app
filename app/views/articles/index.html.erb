<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<div id="articles">
  <% @articles.each do |article| %>
    <%= render article %>
    <p>
      <%= link_to "Show this article", article %>
    </p>
    <p>
    <%= link_to "Edit this article", edit_article_path(article), method: :update %>
    <%= button_to "Destroy this article", article_path(article), method: :delete, data: { confirm: "Are you sure?" } %>
    </p>
  <% end %>
</div>

<%= link_to "New article", new_article_path %>
