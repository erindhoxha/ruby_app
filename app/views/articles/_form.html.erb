<%= form_with(model: article) do |form| %>
  <%= render 'shared/errors' %>
  <div class="form-row">
    <div class="form-group mb-3">
      <%= form.label "Your wish:", for: "description", class: "form-label" %>
      <%= form.text_area :description, class: "form-control", id: "description", rows: 5 %>
    </div>
    <hr>
    <div class="form-group mb-3">
      <%= form.label "Link:", for: "url", class: "form-label" %>
      <%= form.text_field :url, class: "form-control", id: "url", placeholder: "Enter a URL" %>
    </div>
    <div class="form-group mb-3">
      <%= form.label "Category:", for: "category", class: "form-label" %>
      <%= form.collection_select(:category_ids, Category.all, :id, :name, { prompt: "Make your selection from the list below" }, { multiple: true, class: "custom-select" }) %>
    </div>
    <div>
      <%= form.submit article.new_record? ? "Create wish" : "Edit wish", class: "btn btn--link mt-2" %>
    </div>
  </div>
<% end %>