<h1>Search Results</h1>

<%= form_tag search_path, method: :get, class: "d-flex mb-4" do %>
  <%= text_field_tag :search, params[:search], class: "form-control me-2", placeholder: "Search for user or wish" %>
  <%= submit_tag "Search", class: "btn btn-success" %>
<% end %>

<% if @users.any? %>
  <h2>Users</h2>
  <hr>
  <div id="users" class="d-flex flex-column">
    <% @users.each do |user| %>
      <%= render user %>
    <% end %>
  </div>
<% else %>
<hr>
  <p class="mt-3">No users found.</p>
<% end %>

<% if @articles.any? %>
  <h2 class="mt-3">Wishes</h2>
<hr>
  <div id="wishes" class="d-flex flex-column">
    <% @articles.each do |article| %>
      <%= render article %>
    <% end %>
  </div>
<% else %>
<hr>
  <p class="mt-3">No wishes found.</p>
<% end %>