<%= render 'shared/notice' %>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<div>
<div class="d-flex flex-column">
  <h1>Home</h1>
  <p>This website is created to help in finding the wishes of different people.</p>
</div>
</div>
<div class="d-flex flex-column md-flex-row gap-3 md-align-items-start">
<%# <div> %>
  <%# link_to "View your wishes", articles_path, class: "btn btn-dark" %>
  <%# link_to "View users", users_path, class: "btn btn-light" %>
  <%# link_to "Create a wish", new_article_path, class: "btn btn-warning" %>
<%# </div> %>
<% if @users.any? %>
  <div style="flex: 1;">
    <%= form_tag search_path, method: :get, class: "d-flex mb-4" do %>
      <%= text_field_tag :search, params[:search], class: "form-control me-2", placeholder: "Search for user or wish" %>
      <%= submit_tag "Search", class: "btn btn-success" %>
    <% end %>
  </div>
<% end %> 
</div>
<% if @users.any? %>
  <div class="mt-4 users-container">
    <h2 class="mb-0">Latest users created</h2>
      <hr>
      <div class="d-flex flex-column users-home">
        <% @users.each do |user| %>
          <%= render user %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>