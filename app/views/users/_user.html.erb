
<hr>
<div id="<%= dom_id user %>">
  <div class="d-flex flex-row gap-3 align-items-center mb-4">
    <%= gravatar_for user %>
    <div class="mb-0">
      <h4 class="mb-0">
        <%= user.username %>
      </h4>
    </div>
  </div>
  <h5>Wishlist (<%= user.articles.count %>):</h5>
<div class="d-flex flex-column gap-3">
  <% if user.articles.any? %>
    <div class="mb-3 gap-3 d-flex flex-column">
      <% user.articles.each do |article| %>
        <%= render article %>
      <% end %>
    </div>
  <% else %>
    <p>No wishes available.</p>
  <% end %>
</div>
</div>

