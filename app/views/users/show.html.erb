<p style="color: green"><%= notice %></p>

<%= render @user %>

<% if current_user.id == @user.id %>
  <div>
    <%= link_to "Edit this user", edit_user_path(@user) %> |
    <%= link_to "Back to users", users_path %>
    <%= button_to "Delete this user", @user, method: :delete, class: "btn btn-danger mt-3" %>
  </div>
<% end %>
