<% if notice %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<h1>Profile</h1>

<%= render @user %>

<% if current_user&.id == @user&.id %>
  <div>
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-light" %>
    <%= link_to "Back to users", users_path, class: "btn btn-dark ml-2" %>
    <hr>
    <%= button_to "Delete your account", @user, method: :delete, class: "btn btn-danger" %>
  </div>
<% end %>
